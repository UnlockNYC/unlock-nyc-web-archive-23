      </div>
      <a class="img-link" href="https://neighborstogether.org/" target="_blank">
        <img class="logo" src="https://cdn.glitch.com/b185c63a-8d27-412b-b4cb-047ca0c8de79%2FNeighborsTogether_logo.png?v=1605548777796">
      </a>
      <a class="img-link" href="https://communitiesresist.org/" target="_blank">
        <img class="logo" src="https://cdn.glitch.com/b185c63a-8d27-412b-b4cb-047ca0c8de79%2FCommunitiesResist_Logo.png?v=1605548782492">
      </a>
      <a class="img-link" href="https://labs.robinhood.org/" target="_blank">
        <img class="logo" src="https://cdn.glitch.com/b185c63a-8d27-412b-b4cb-047ca0c8de79%2FBlueRidgeLabs_logo.png?v=1605548787537">
      </a>
      <a class="img-link" href="https://www.awesomefoundation.org/en" target="_blank">
        <img class="logo" src="https://cdn.glitch.com/b185c63a-8d27-412b-b4cb-047ca0c8de79%2FAwesomeFoundation_logo_white.jpg?v=1605548791395">
      </a>
    </div>
    
  </div> <!-- end of #about-page -->
  
   {% include footer.liquid %}
  
  
    
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>  
  <script>
    $(document).ready(function() {
      $("h1.home-title").click(function() {
        window.location.href= "/";
      });
      
      if ($(window).width() > 700) {
        $("div.bio-wrapper").hover(function() {
          $(this).toggleClass("hover-bio");
          let theBio = $(this).find("div.bio-content").html();
          $("div#bio-hover").html(theBio);
          $("div#bio-hover").show();
          $("div#bio-hover").css("opacity", 1);
          
        });
        $("div#bio-wrap-grid").mouseleave(function() {
          $("div#bio-hover").css("opacity", 0).delay(1000).hide();
        });
      }
    });
  </script>
  </body>
  
</html>