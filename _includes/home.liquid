<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Unlock NYC - {{ pageTitle }}</title>
    <link rel="stylesheet" href="{{ linkedCSS }}">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,200;0,300;0,400;1,300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400&display=swap" rel="stylesheet">
    
  </head>
  <body>
  
  {% include menu.liquid %}
  
  <div id="page">
    <section id="top">
      <div id="key-friend"></div>
      <div id="top-bg"></div>
      <div id="titles">
        <h1 class="home-title">Unlock NYC</h1>
        <h2 class="home-subtitle">fighting for fair housing</h2>
        <br>
        <h2 class="home-info">more copy? words words words words words words words words words words words words words 
        words words words words words words words words words words words</h2>
      </div>
    </section>
    <section id="stories">
      <div class="story-slider" id="slider">
        <div class="control_next">></div>
        <div class="control_prev"><</div>
        <ul>
        {% for slide in collections.slides %}
        <li>
          <img class="storyline" src="https://raw.githubusercontent.com/mab253/unlock-nyc-web/main{{ slide.data.bg_img }}">
          <div class="slide-text">
          {{ slide.data.content }}
          </div>
        </li>
        {% endfor %}
        </ul>
      </div>
    </section>
    <section id="info" style="border-top: 1px solid Lightgray;">
      <p style="margin-top: 50px; margin-left: 50px;">more text here! yes? and another graphic with photo/windows</p>
    </section>
    <section id="report-bot" style="border-top: 1px solid Lightgray;">
      <p style="margin-top: 50px; margin-left: 50px;">report bot!</p>
    </section>
    <section id="make-calls" style="border-top: 1px solid Lightgray;">
      <p style="margin-top: 50px; margin-left: 50px;">CALL BUTTON</p>
    </section>
    
  </div>
  
  {% include footer.liquid %}
  
  
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script> 
  <script src="https://ajax.googleapis.com/ajax/libs/jquerymobile/1.4.5/jquery.mobile.min.js"></script>
  <script src="/scripts/slider.js"></script> 
  <script>
    $(document).ready(function() {
    
      slideTextCheck();
      
      if($(window).width() > 700) {
        $(window).scroll(function() {
          let windowHeight = $(window).height();
          if ($(window).scrollTop() > windowHeight) {
            $("#menu").addClass("sticky");
          } else {
            $("#menu").removeClass("sticky");
          }
        }) // end scroll function
      }
      
      function slideTextCheck() {
        $("#slider div.slide-text").each(function() {
          let slideTitle = $(this).children("h1").height();
          if (slideTitle > 320) {
            $(this).addClass("longtitle");
          }
          if ($(window).width() < 700) {
            $(this).parent("li").children("img.storyline").css("top", slideTitle - 60);
          }
        });
      }
    });
  </script>
  </body>
  
</html>